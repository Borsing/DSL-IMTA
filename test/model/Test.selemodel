	navigate "http://www.imt-atlantique.fr/fr" 
	assert [body] contain [a title="Toutes les actualités" inner="Toutes les actualités"]
}

test { 
	openbrowser default 
    navigate "http://www.imt-atlantique.fr/fr" 
    click [a inner="Toutes les actualités"]
    assert [body] contain [a inner="Accueil"]
}

test {
	openbrowser default
	navigate "http://www.imt-atlantique.fr/fr" 
 	click [a inner="Toutes les actualités"]
	click [img alt="Accueil"]
	assert [body] contain [a title="Toutes les actualités"]
}

